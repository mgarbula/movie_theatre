extends movie_layout 

block hall
    div 
        h3= 'Numer miejsca: ' + seatNumber
    div 
        form(action='#' method='post')
            label Twój adres email
            br
            input(type='text', id='email', name='email', pattern='^[a-z][a-zA-Z0-9.]+@[a-zA-Z0-9]+.[a-z0-9]{2,4}$',
            title='Nieprawidłowy adres email', required)
            br
            input(type='submit', value='Rezerwuj')